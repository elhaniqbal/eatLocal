
    <% layout('/layouts/boilerplate') %>
   <div class="row">
    <h1 class="text-center">New Restaurant</h1>
    <div class="col-6 offset-3">
        <form action="/restaurants" method="POST" novalidate class="validated-form">

            <div class="mb-3">
    
                <label class ="form-label"   for="name"> Name </label>
                <input class="form-control" type="text"  id="name" name="restaurant[name]" required>
                <div class="valid-feedback">
                    Looks Good!
                </div>
            </div>
    
            <div class="mb-3">
                <label class ="form-label"  for="cuisine"> Cuisine </label>
                <input class="form-control" type="text"  id="cuisine" name="restaurant[cuisine]" required>
                <div class="valid-feedback">
                    Yum!
                </div>
            </div>
    
            <div class="mb-3">
    
                <label class ="form-label"  for="address"> Address </label>
                <input class="form-control" type="text"  id="address" name="restaurant[address]" required>
                <div class="valid-feedback">
                    Looks Good!
                </div>
            </div>
            <div class="mb-3">
    
                <label   for="description" class ="form-label"> Description </label>
                <textarea  type="text"  id="description" name="restaurant[description]" class="form-control" required></textarea>
                <div class="valid-feedback">
                    Looks Good!
                </div>
            </div>
            <div class="mb-3">
    
                <label class ="form-label"  for="iamge"> Image URL </label>
                <input class="form-control" type="text"  id="address" name="restaurant[image]" required>
                <div class="valid-feedback">
                    Looks Good!
                </div>
            </div>
            <div class="mb-3"> 
                <button class="btn btn-primary btn-success">
                    Add Restaurant
                </button>
            </div>  
        </form>
    </div>
   </div>
    <footer>
        <a class="btn btn-secondary" href="/restaurants"> All Restaurants</a>
    </footer>
</body>
</html>

